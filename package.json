{
  "name": "vue3-template",
  "description": "A Vue.js 3 project template",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "pretty-quick": "pretty-quick --staged --pattern \"**/*.*(js|md|vue)\"",
    "prepare": "husky install",
    "cz": "git-cz",
    "semantic-release": "semantic-release",
    "upgrade:dep": "taze -w -i",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit --composite false"
  },
  "dependencies": {
    "@ni-web-infra/common-utils": "^1.2.0",
    "axios": "^1.4.0",
    "dayjs": "^1.11.9",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.4",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/eslint-parser": "^7.22.9",
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@rushstack/eslint-patch": "^1.3.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/gitlab": "12.0.3",
    "@semantic-release/gitlab-config": "12.0.1",
    "@semantic-release/npm": "10.0.4",
    "@tsconfig/node18": "^18.2.0",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^46.4.4",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.15.1",
    "git-cz": "4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "pretty-quick": "^3.1.3",
    "sass": "^1.63.6",
    "semantic-release": "21.0.7",
    "taze": "^0.11.2",
    "type-fest": "^4.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vite-plugin-eslint": "^1.8.1",
    "vue-tsc": "^1.8.5"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "**/*.{js,vue,ts,json}": [
      "prettier --write"
    ]
  }
}
