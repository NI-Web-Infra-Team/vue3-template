{
  "name": "vue3-template",
  "description": "A Vue.js 3 project",
  "packageManager": "yarn@1.22.19",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "pretty-quick": "pretty-quick --staged --pattern \"**/*.*(js|md|vue)\"",
    "prepare": "husky install",
    "cz": "git-cz",
    "semantic-release": "semantic-release",
    "upgrade:dependencies": "taze -w -i"
  },
  "dependencies": {
    "@ni-web-infra/common-utils": "^1.1.0-beta.1",
    "axios": "^1.4.0",
    "dayjs": "^1.11.9",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.4",
    "vue": "^3.3.4",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.6",
    "@babel/eslint-parser": "^7.22.6",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/gitlab": "12.0.3",
    "@semantic-release/gitlab-config": "12.0.1",
    "@semantic-release/npm": "10.0.4",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.15.1",
    "git-cz": "4.9.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "sass": "^1.63.6",
    "semantic-release": "21.0.6",
    "taze": "^0.11.2",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vite-plugin-eslint": "^1.8.1",
    "vue-tsc": "^1.8.3"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "**/*.{js,vue,ts,json}": [
      "prettier --write"
    ]
  }
}
